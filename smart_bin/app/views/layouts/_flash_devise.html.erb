<% if notice != nil %>
  <div class="alert alert-success" role="alert">
    <button class="close" data-dismiss="alert">×</button>
    <%= notice %>
  </div>
<% end %>

<% if alert != nil  %>
  <div class="alert alert-danger" role="alert">
    <button class="close" data-dismiss="alert">×</button>
    <%= alert %>
  </div>
<% end %>