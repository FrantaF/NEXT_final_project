<!DOCTYPE html>
<html>
<head>
  <title>SmartBin</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_link_tag    'login', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_link_tag    'braintree', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'braintree', 'data-turbolinks-track': 'reload' %>

</head>

<body>
 <!--Navbar-->
 
 <nav class="navbar navbar-expand-sm navbar-dark bg-dark">

  <% if !user_signed_in? %>
  <ul class="navbar-nav">

    <li class="nav-item">
      <%= link_to "Cool bin", "/", method: :post, :class => "nav-link"%>       
    </li>       

  </ul>

  <ul class="navbar-nav ml-auto">        
    <li class="nav-item">           
      <%= link_to "Solutions", "/solutions", method: :post, :class => "nav-link"%> 
    </li>

    <li class="nav-item">           
      <%= link_to "Subscription plans", "subscriptions/pricing_tables", method: :post, :class => "nav-link"%> 
    </li>

    <li class="nav-item">           
      <%= link_to "Contact", "/contact", method: :post, :class => "nav-link"%> 
    </li>

    <li class="nav-item">           
      <%= link_to "Client Login", "/sign_in", method: :get, :class => "nav-link"%> 
    </li>
  </ul>
  <% else %>
  
  <ul class="navbar-nav mx-auto text-center">

    <li class="nav-item">           
      <%= link_to "Dashboard", "/users/dashboard", method: :get, :class => "nav-link"%> 
    </li>

    <li class="nav-item">           
      <%= link_to "Employee Profiles", "/employee_profiles", method: :get, :class => "nav-link"%> 
    </li>

    <li class="nav-item">           
      <%= link_to "Sign Out", "/sign_out", method: :delete, :class => "nav-link"%>      
      <!--  fa fa-sign-out -->
    </li>
  </ul>
  <% end %>

</ul>

</nav>

<!-- This is for Devise. It messes up the page layout -->
<!-- <p class="notice"><%#= notice %></p>
  <p class="alert"><%#= alert %></p> -->


  <%= yield %>


  <nav class="navbar fixed-bottom navbar-dark bg-dark">
    <a class="navbar-brand" href="#">Fixed bottom</a>
  </nav>

</body>


</html>
