<div class="container conatiner-fluid login-container"> 

   <%= form_for :session, url: "", id: "session-form", :html => {:class => "login-form"} do |form| %> 

   <div id="login-box" class="login-box">

      <div class="form-group">  
         <input class="form-control input-sm" type="text" placeholder="Client Credentials" style='text-align: center;' name="session[email]">
      </div>

      <div class="form-group">  
         <input class="form-control" type="password" placeholder="Password" style='text-align: center;' name="session[password]">
      </div>                    

      <div class="form-group">  
         <button type="submit" class="btn btn-success btn-block">Login</button>
      </div>        

   </div>
   <% end %>

</div>
