<div class="container conatiner-fluid login-container"> 

  <%= form_for :session, url: "", id: "session-form", :html => {:class => "login-form"} do |form| %> 

  <div id="login-box" class="login-box">

    <div class="form-group">  
      <input class="form-control input-sm" type="text" placeholder="Email" style='text-align: center;' name="session[email]">
    </div>

    <div class="form-group">  
      <input class="form-control" type="password" placeholder="Password" style='text-align: center;' name="session[password]">
    </div>                    

    <div class="form-group">  
      <button type="submit" class="btn btn-success btn-block">Login</button>
    </div>        

  </div>
  <% end %>


  <div id="registration-box" class="registration-box" style="display: none;">

    <%= form_for :login, url: "", id: "login-form", :html => {:class => "login-form"} do |form| %> 
    <div class="form-group">  
      <input class="form-control input-sm" type="text" placeholder="Email" style='text-align: center;' name="user[email]">
    </div>

    <div class="form-group">  
      <input class="form-control" type="password" placeholder="Password" style='text-align: center;' name="user[password]">
    </div>                    

    <div class="form-group">  
      <button type="submit" class="btn btn-info btn-block">Register</button>
    </div>        

  </div>

  <div class="form-group" align="center">  
    <%= link_to "or Register", "", :class => '', :id => "login-registration-link", 
    :onclick => "event.preventDefault(); registration_form_display();" %>
  </div>

  <% end %>

</div>

