<script type="text/javascript">

  function registration_form_display(){
    let sender = document.getElementById("login-registration-link");      

    let login = document.getElementById("login-box");      
    let registration = document.getElementById("registration-box");      

    if (login.style.display === "none") {
      login.style.display = "block";
      sender.innerHTML = "or Register"
      registration.style.display = "none";
    } else {
      login.style.display = "none";
      sender.innerHTML = "Login"
      registration.style.display = "block";
    }
  }
</script>

