<div class="container container-fluid">
    <!-- first row with title -->
    <div class="row">
        <div class="col-12 text-center mb-5">            
            <h2>Welcome <%= @current_user.username %></h2>
        </div>
    </div>
    
    <!-- Second row: input fields -->
    <div class="row">
        <div class="col-sm-12 col-md-4">
            <%= image_tag 'favicon_raspberry.png', class: "mx-auto d-block img-fluid", style: "height:200px" %>
        </div>
        <div class="col-sm-12 col-md-8">
            <div class="row">
                <div class="col-sm-12 col-md-6">
                    <div class="form-group">
                        <label for="usr">User name:</label>
                        <input type="text" class="form-control" id="usr1" placeholder="User name">            
                    </div>
                    <div class="form-group">
                        <label for="usr">Telephone number:</label>
                        <input type="text" class="form-control" id="usr2" placeholder="Telephone number:">   
                    </div>      
                </div>  
                <div class="col-sm-12 col-md-6">
                    <div class="form-group">
                        <label for="usr">Email:</label>
                        <input type="text" class="form-control" id="usr3" placeholder="Email">            
                    </div>
                    <div class="form-group">
                        <label for="usr">Password:</label>
                        <input type="password" class="form-control" id="usr4" placeholder="Password">            
                    </div>    
                </div>
                <!-- Submit button -->
                <div class="col-12">
                    <div class="form-group">
                        <button type="button" class="btn btn-success btn-block">Save changes</button>
                    </div>
                </div>
            </div>
        </div>  
    </div>   
</div>