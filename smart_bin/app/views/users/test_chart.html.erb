
<div class="container">        
  <canvas id="myChart"></canvas>
</div>

<div class="container">        
  <canvas id="myChart2"></canvas>
</div>

  <div class="container">        
    <canvas id="myChart3"></canvas>
  </div>

<script>
    let myChart = document.getElementById('myChart').getContext('2d');

    // Global Options
    Chart.defaults.global.defaultFontFamily = 'Lato';
    Chart.defaults.global.defaultFontSize = 18;
    Chart.defaults.global.defaultFontColor = '#777';

    // Fill Level over time for a single bin 

    let massPopChart = new Chart(myChart, {
      type:'bar', // bar, horizontalBar, pie, line, doughnut, radar, polarArea
      data:{
        //these labels will be a time line         
        labels: <%= @hourly_timeline %>,
        // ['Boston', 'Worcester', 'Springfield', 'Lowell', 'Cambridge', 'New Bedford'] ,
        datasets:[{
          label:'Fill Level',          
          data: <%= @fill_level_percentage %>,
          
          //backgroundColor:'green',
          backgroundColor:[
          'rgba(255, 99, 132, 0.6)',
          'rgba(54, 162, 235, 0.6)',
          'rgba(255, 206, 86, 0.6)',
          'rgba(75, 192, 192, 0.6)',
          'rgba(153, 102, 255, 0.6)',
          'rgba(255, 159, 64, 0.6)',
          'rgba(255, 99, 132, 0.6)'
          ],
          borderWidth:1,
          borderColor:'#777',
          hoverBorderWidth:3,
          hoverBorderColor:'#000'
        }]
      },
      options:{
        title:{
          display:true,
          text:'Fill Level - Bin 1',
          fontSize:25
        },
        legend:{
          display:true,
          position:'right',
          labels:{
            fontColor:'#000'
          }
        },
        layout:{
          padding:{
            left:50,
            right:0,
            bottom:0,
            top:0
          }
        },
        tooltips:{
          enabled:true
        }
      }
    });

    // How  long does it take for a bin to fill up
    let myChart2 = document.getElementById('myChart2').getContext('2d');
    let massPopChart2 = new Chart(myChart2, {
      type:'line', // bar, horizontalBar, pie, line, doughnut, radar, polarArea
      data:{
        //these labels will be a time line         
        labels: <%= @record_num %>,        
        datasets:[{
          label:'Time it takes to fill up',          
          data: <%= @filled_up_time %>,
          
          //backgroundColor:'green',
          backgroundColor:[
          'rgba(255, 99, 132, 0.6)',
          'rgba(54, 162, 235, 0.6)',
          'rgba(255, 206, 86, 0.6)',
          'rgba(75, 192, 192, 0.6)',
          'rgba(153, 102, 255, 0.6)',
          'rgba(255, 159, 64, 0.6)',
          'rgba(255, 99, 132, 0.6)'
          ],
          borderWidth:1,
          borderColor:'#777',
          hoverBorderWidth:3,
          hoverBorderColor:'#000'
        }]
      },
      options:{
        title:{
          display:true,
          text:'Time (in hours) it takes to fill up a bin',
          fontSize:25
        },
        legend:{
          display:true,
          position:'right',
          labels:{
            fontColor:'#000'
          }
        },
        layout:{
          padding:{
            left:50,
            right:0,
            bottom:0,
            top:0
          }
        },
        tooltips:{
          enabled:true
        }
      }
    });

    // Fill up hourly rate
    let myChart3 = document.getElementById('myChart3').getContext('2d');
    let massPopChart3 = new Chart(myChart3, {
      type:'horizontalBar', // bar, horizontalBar, pie, line, doughnut, radar, polarArea
      data:{
        //these labels will be a time line         
        labels: <%= @hourly_timeline %>,        
        datasets:[{
          label:'How quickly the bin fills up each hour',          
          data: <%= @fill_up_rate %>,
          
          //backgroundColor:'green',
          backgroundColor:[
          'rgba(255, 99, 132, 0.6)',
          'rgba(54, 162, 235, 0.6)',
          'rgba(255, 206, 86, 0.6)',
          'rgba(75, 192, 192, 0.6)',
          'rgba(153, 102, 255, 0.6)',
          'rgba(255, 159, 64, 0.6)',
          'rgba(255, 99, 132, 0.6)'
          ],
          borderWidth:1,
          borderColor:'#777',
          hoverBorderWidth:3,
          hoverBorderColor:'#000'
        }]
      },
      options:{
        title:{
          display:true,
          text:'Fill up hourly rate',
          fontSize:25
        },
        legend:{
          display:true,
          position:'right',
          labels:{
            fontColor:'#000'
          }
        },
        layout:{
          padding:{
            left:50,
            right:0,
            bottom:0,
            top:0
          }
        },
        tooltips:{
          enabled:true
        }
      }
    });


</script>


<div class="col-md-3" id="chart" style="background:whitesmoke;">
            <p>Area Summary</p>
            <div class="list-group">
                <a href="#" class="list-group-item list-group-item-action"><%= @dustbins.first.area.name %>
                    <span class="badge badge-primary badge-pill"><%= @dustbins.first.area.dustbins.where({ :fill_level_id => 9..11 }).count %></span>
                </a>
            </div>
            <br>
            <p>Dustbin Summary</p>
            <div class="list-group">
                <% @dustbins.each do |d| %>
                <a href="#" class="list-group-item list-group-item-action"><%= d.code %></a>
                <% end %>
            </div>
        </div>

